<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/origin_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:fillViewport="true"
    android:padding="10dp" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout_origin_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

<!--             <ImageView
                android:id="@+id/origin_routy_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/origin_logo"
                android:minHeight="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/whitesplashhi" /> -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_origin_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/linearLayout_origin_top"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/origin_textview_welcome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/origin_welcome"
                android:textColor="@color/ShitGold"
                android:textSize="26dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/origin_address_field"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/origin_hint"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/White"
                android:textColorHint="@color/LightGrey" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/find_user_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout_origin_bottom"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_button"
            android:drawableRight="@drawable/findwhite"
            android:gravity="center"
            android:onClick="findUserLocation"
            android:paddingBottom="8dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:text="@string/find_user_prompt"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_below="@id/find_user_button"
        android:layout_marginTop="40dp"
	    android:baselineAligned="true"
	    android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_destinations_goingto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/destination_question"
            android:textColor="@color/ShitGold"
            android:textSize="26dp"
            android:textStyle="bold|italic"
            android:typeface="normal" />

        <LinearLayout
            android:id="@+id/LinearLayout_destinations"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/button_destination_add_new"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_button"
            android:drawableLeft="@drawable/poswhiteonly"
            android:gravity="center"
            android:onClick="onAddDestinationClicked"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:text="@string/destination_add"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayout_destinations_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_test_defaults"
                style="android:buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Switch
                android:id="@+id/toggleDistDur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:switchTextAppearance="@style/Toggle"
                android:textOff="@string/by_dist"
                android:textOn="@string/by_dur"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_route_it"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_button"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/routeitdesc"
            android:onClick="acceptDestinations"
            android:src="@drawable/routeitwhitewithbox" />

    </LinearLayout>
        
        
    </RelativeLayout>

</ScrollView>