<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/origin_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:padding="10dp" >

    <!--
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/origin_layout"
        android:text="@string/find_user_prompt"
        tools:context=".OriginActivity" />
    -->

    <ImageView
        android:id="@+id/origin_routy_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/origin_logo"
        android:minHeight="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/whitesplashhi" />

    <TextView
        android:id="@+id/textview_origin_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin_routy_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="..the right route for many places."
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold|italic" />
    
    <TextView
        android:id="@+id/origin_textview_welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/origin_address_field"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/origin_welcome"
        android:textColor="@color/ShitGold"
        android:textSize="19dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/origin_address_field"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/enter_destinations_button"
        android:layout_marginBottom="40dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/origin_hint"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/White" />
    
    <Button
        android:id="@+id/enter_destinations_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/nextwhite"
        android:onClick="goToDestinationsScreen"
        android:text="@string/goto_destinations" />

    <Button
        android:id="@+id/find_user_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/findwhite"
        android:onClick="findUserLocation"
        android:text="@string/find_user_prompt" />

</RelativeLayout>
